{
  "compilerOptions": {
    "target": "es6",                   
    "module": "es6",                
    "moduleResolution": "node",
    "baseUrl": "./",
    "sourceMap": true,                 
    "outDir": "build",              
    "strict": true,                    
    "esModuleInterop": true,           
    "skipLibCheck": true,              
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}